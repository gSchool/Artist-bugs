extends ../layout 

block content 
  h1 Showing the artists
  a(href = '/artists/new') New Artist 
  if artists
    table 
      thead 
        tr 
          th Artist 
          th Painting 
          th Medium 
          th Description 
      tbody 
        for artist in artists 
          tr 
            td=artist.name
            td 
              a(href='/artists/#{artist.id}')=artist.painting
            td=artist.medium 
            td=artist.description
  
